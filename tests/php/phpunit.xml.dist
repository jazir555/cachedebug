<?xml version="1.0"?>
<phpunit
    bootstrap="bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    >
    <testsuites>
        <testsuite name="cache-detector">
            <directory prefix="test-" suffix=".php">./unit/</directory>
        </testsuite>
    </testsuites>
    <php>
        <!-- Path to the WordPress develop checkout -->
        <const name="WP_DEVELOP_DIR" value="/tmp/wordpress-develop/" />
    </php>
</phpunit>
